{
  "name": "node-js-app-boilerplate",
  "version": "1.0.0",
  "description": "Node JS API boilerplate",
  "license": "MIT",
  "author": "R Cube Dev",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Hello World\";",
    "setup-env": "test -f .env || cp .example.env .env",
    "dev": "nodemon -x tsx src/server.ts",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "make-module": "node scripts/generate-module.mjs",
    "lint:fix": "eslint . --ext .js,.ts,.tsx,.jsx --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/luxon": "^3.6.2",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.7",
    "@types/nodemailer": "^6.4.17",
    "@types/pino-http": "^5.8.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.30.0",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "luxon": "^3.6.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  }
}
